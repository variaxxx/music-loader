{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "declaration": false,
    "outDir": "dist-electron/",
    "sourceMap": true
  },
  "files": [
    "electron/main.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
